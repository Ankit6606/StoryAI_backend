        function validateScenarioForm() {
    var enteredScenario = document.getElementById("valueInput").value;

    if (enteredScenario === "") {
        alert("Please enter at least one value or select from the cards.");
        return false; // Prevent form submission
    } else {
        disableButton();
        return true; // Allow form submission
    }
}

document.addEventListener('DOMContentLoaded', function () {
    const form = document.querySelector('form');
    form.addEventListener('submit', function (event) {
        // Prevent default form submission
        event.preventDefault();

        // Validate the form and submit asynchronously if valid
        if (validateScenarioForm()) {
            showModal(form);
        }
    });
});

  function showModal(form) {
    // event.preventDefault();

    // Show the modal
    document.getElementById('myModal').classList.add('visible');

    // Start filling the progress bar
    fillProgressBar();
    setTimeout(function () {
          window.location.href = '/storyoutput';
        }, 180000); // 90 seconds is
    // Use jQuery to asynchronously submit the form
    $.ajax({
      url: form.action,
      method: form.method,
      data: $(form).serialize(),
      success: function (response) {
        // Handle the server response as needed
        console.log('Server response:', response);

        // Redirect the user to another page after 90 seconds

      },
      error: function (error) {
        // Handle errors if the request fails
        console.error('Error:', error);
    
      },
      complete: function () {
        // Stop the progress bar animation here if needed
        console.log('Form submitted successfully');
      }
    });
  }
 

  
function fillProgressBar() {
    const fillingProgress = document.querySelector('.filling-progress');
    const percentageTracker = document.querySelector('.percentage-tracker');
    const loadingText = document.getElementById('loadingText');

    let percentage = 0;

    const fill = setInterval(() => {
        if (percentage < 33) {
            fillingProgress.style.width = `${percentage}%`;
            percentageTracker.textContent = `${percentage.toFixed(2)}%`;
            loadingText.textContent = 'Generating Story';
            percentage += 0.1;
        } else if (percentage < 66) {
            clearInterval(fill);
            setTimeout(() => {
                fillProgressBarStageTwo();
            }, 1000);
        }
    }, 175);
}

function fillProgressBarStageTwo() {
    const fillingProgress = document.querySelector('.filling-progress');
