            <a href="/story" class="special-button">Create Story</a>
        </div>
    
        <div class="ellipse"></div>
        <div class="flex-container">
            <!-- Image Box -->
            <div class="box-audio">
                <div class="audio-player">
                    <audio id="audio" style="width: 70%;">
                        <!-- Replace 'your-audio-file.mp3' with the actual URL of your audio file -->
                        <source src="http://20.84.90.82:8000/content/799ff823-50b7-4f9c-bda3-f6e4cdb1fedf/audio.mp3" type="audio/mp3">
