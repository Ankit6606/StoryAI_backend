<style>
    body {
        margin: 0;
        padding: 0;
        background: linear-gradient(180deg, rgba(0, 0, 0, 0.74) 20.09%, rgba(0, 0, 0, 0.64) 48.97%, rgba(0, 0, 0, 0.75) 100%),
            url('css/assets/story-page-bg.png') center/cover no-repeat;
        height: 100vh;
        font-family: Arial, sans-serif;
        overflow: hidden;

    }

    .image-box {
        position: absolute;
        top: 0%;
        left: 0%;
        max-width: 100%;
        width: 100%;
        height: 44%;
        max-height: 500px;
        background: url('css/assets/Ellipse\ 17.png') center/cover no-repeat;
        box-shadow: 0px 4px 15px 0px rgba(0, 0, 0, 0.1);

    }




    .flex-container {
        position: relative;
        top: -7%;
        margin-left: 3.3%;
        display: flex;
       
        /* To create a 40px margin between the boxes */
    }

    .box {
        width: 900px;
        height: 900px;
        flex-shrink: 0;
        border-radius: 30px;
        background: #FDF0F2;
        box-shadow: 0px 4px 55px 0px rgba(21, 14, 57, 0.60) inset;
        margin: 0 20px;
        /* Adjust as needed */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .box-audio {
        width: 900px;
        height: 900px;
        flex-shrink: 0;
        border-radius: 30px;
        
        box-shadow: 0px 4px 55px 0px rgba(21, 14, 57, 0.60) inset;
        margin: 0 20px;
        /* Adjust as needed */
        display: flex;
        flex-direction: column;
        
        justify-content: flex-end;
    }
    .audio-player{width: 90%;
        margin-bottom: 3.5%;
height: 143.232px;
flex-shrink: 0;
border-radius: 30px;
border: 5px solid #A288CB;
align-self: center;

background: var(--Linear, linear-gradient(180deg, #22185B 0%, rgba(22, 14, 68, 0.86) 100%));}
    

    .text-box {
        text-align: center;
    }

    .box-heading {
        font-family: Arial, sans-serif;
        font-size: 36px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .box-subtext {
        font-family: Arial, sans-serif;
        font-size: 18px;
        color: #555;
    }


    @keyframes fadeIn {
        0% {
            opacity: 0;

        }


        100% {
            opacity: 1;
        }
    }

    @keyframes fadeOut {
        0% {
            opacity: 1;
        }

        100% {
            opacity: 0;
        }
    }

 



    


    @keyframes containerSlideOut {
        0% {
            transform: translateY(100%);
            opacity: 0;
        }

        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @keyframes cardsSlideIn {
        0% {

            opacity: 0;
        }

        50% {
            transform: translateX(100%);
            opacity: 0;
        }

        100% {
            transform: translateX(0);
            opacity: 1;
        }
    }

    .ellipse {
        width: 692px;
        height: 299.844px;
        flex-shrink: 0;
        background-image: url("css/assets/stars.png");


        background-size: contain;
        position: relative;
        top: 4%;
        left: 33%;
        opacity: 0;
        /* Start with 0 opacity to make it invisible */
        animation: ellipseMoveUp 1s ease-in forwards, ellipseGlitter 2s infinite;
        z-index: 10;

    }

    @keyframes ellipseMoveUp {
        0% {
            transform: translateY(-500px);
            opacity: 0;
        }

        100% {
            transform: translateY(-10px);
            /* Move the ellipse up */
            opacity: 1;
            /* Make it visible */
        }


    }

    @keyframes ellipseGlitter {
        0% {
            opacity: 1;
        }

        10% {
            opacity: 0.9;
        }

        20% {
            opacity: 0.8;
        }

        30% {
            opacity: 0.7;
        }

        40% {
            opacity: 0.5;
        }

        50% {
            opacity: 0.35;
        }

        60% {
            opacity: 0.5;
        }

        70% {
            opacity: 0.7;
        }

        80% {
            opacity: 0.8;
        }

        90% {
            opacity: 0.9;
        }

        100% {
            opacity: 1;
        }
    }
    
    
    .progress-bar {
        width: 90%;
        height: 6.428px;
        flex-shrink: 0;
        border-radius: 10px;
        background: linear-gradient(270deg, #BB80FF 0%, #FFA8CF 0%);
        position: relative;
        margin-left: 5%;
    }

    .slider {
        width: 9.165px;
        height: 14.61px;
        flex-shrink: 0;
        fill: #FFF;
        cursor: pointer;
        position: absolute;
        top: -4.5px; /* Adjust position as needed */
    }

    .play-pause-container {
    height: 95px;
    width: 95px;
    margin-left: 50%;
    margin-top: -47.5px; /* Half of the button's height */
     /* Center horizontally */
    transform: translateX(-50%);
    z-index: 2; /* Ensure it's above other elements */
    margin-bottom: 3%;
}

/* Add this style to center the button inside the container */
.play-pause-button {
    width: 95px;
    height: 95px;
    cursor: pointer;
}
</style>

