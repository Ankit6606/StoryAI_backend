.line {
    margin-top: 10px;
    height: 3px;
    width: 490px;
    border: 3px;
    transform: rotate(0deg);
    background: linear-gradient(270deg, #C0A9FF 0%, rgba(132, 110, 189, 0) 49.77%, #C0A9FF 100%);
}

.text {
    margin-top: 25px;
    color: #FFF;
    font-family: 'Noto Sans', sans-serif;
    font-size: 16px;
    font-weight: 700;
    line-height: 150%;
}

.sign-in-text {
    color: #D1B5FE;
}

.flexbox {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 99;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    opacity: 1;
    transition: opacity 0.5s ease;
    /* Add a transition for smoother and slower opacity change */
}



.title {
    margin-top: -100px;
    color: #FFF;
    font-family: 'Volkhov', serif;
    font-size: 32px;
    font-weight: 700;
    line-height: 48px;
}

.subtitle {
    color: #FFF;
    font-family: 'Noto Sans', sans-serif;
    font-size: 18px;
    font-weight: 500;
    line-height: 27px;
}

.signup-box {
    margin-top: 400px;
    display: flex;
    flex-direction: column;
    z-index: 100;
}

.input-field {
    z-index: 103;
    width: 411px;
    height: 44.724px;
    flex-shrink: 0;
    border: none;
    border-radius: 10px;
    background: #FFF;
    margin: 2px 0;

    color: #767676;
    font-family: Noto Sans;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
}

.header-text {
    color: #FFF;
    text-align: left;
    font-family: 'Noto Sans', sans-serif;
    font-size: 16px;
    font-weight: 800;
    line-height: 24px;
    margin-bottom: 2.6px;
    margin-left: 0px;
}

.password-container {
    position: relative;
}

.password-toggle {
    position: absolute;
    top: 50%;
    right: 10px;
    transform: translateY(-50%);
    cursor: pointer;
}

.password-input {
    width: 100%;
    padding: 10px;
}

.password-toggle-icon {
    cursor: pointer;
}

.country-code {
    width: 78.19px;
    height: 45.724px;
    flex-shrink: 0;
    border: none;
    border-radius: 10px;
    background: #FFF;
    padding: 10px;
    color: #767676;
    font-family: Noto Sans;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 150%;
}

.boxz {
    margin-top: 0px;
}

.signup-button {
    width: 411px;
    height: 44.724px;
    flex-shrink: 0;
    border-radius: 10px;
    border: 2px solid #A288CB;
    background: var(--Linear, linear-gradient(180deg, #22185B 0%, rgba(22, 14, 68, 0.86) 100%));
    color: #FFF;
    font-family: 'Noto Sans', sans-serif;
    font-size: 16px;
    font-weight: 700;
    line-height: 44.724px;
    cursor: pointer;
    margin: 25px 0;
    transition-duration: 0.5s;
}

.signup-button:hover {
    background: var(--Linear, linear-gradient(180deg, #22185B 0%, rgba(67, 4, 45, 0.86) 100%));
    /* Change the background color on hover */
    transform: translateY(-3px);
}

@keyframes fade-out-down {
    from {
        opacity: 1;
        transform: translateY(0);
    }

    to {
        opacity: 0;
        transform: translateY(50px);
    }
}

@keyframes fade-in-up {
    from {
        opacity: 0;
        transform: translateY(50px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.fade-out-down {
    animation: fade-out-down 1s both;
}

.fade-in-up {
    animation: fade-in-up 1s both;
}

.btn:link,
.btn:visited {

    text-transform: uppercase;
    text-decoration: none;
    padding: 15px 40px;
    display: inline-block;

    transition: all .2s;
    position: relative;
    border-radius: 10px;
    border: 2px solid #A288CB;
    font-family: 'Noto Sans', sans-serif;
    font-size: 16px;
    font-weight: 700;

    cursor: pointer;
    margin: 25px 0;
    background: var(--Linear, linear-gradient(180deg, #22185B 0%, rgba(22, 14, 68, 0.86) 100%));
}

.btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
}

.btn:active {
    transform: translateY(-1px);
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
}

.btn-white {
    background: var(--Linear, linear-gradient(180deg, #22185B 0%, rgba(22, 14, 68, 0.86) 100%));
    color: #ffffff;
}

.btn::after {
    content: "";
    display: inline-block;
    height: 100%;
    width: 100%;
    border-radius: 10px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    transition: all .4s;
}

.btn-animated {
    animation: moveInBottom 1s ease-out;
    animation-fill-mode: backwards;
}

.btn-white::after {
    background: var(--Linear, linear-gradient(180deg, #22185bbc 0%, rgba(22, 14, 68, 0.567) 100%))
}

.btn:hover::after {
    transform: scaleX(1.4) scaleY(1.6);
    opacity: 0;
}


@keyframes moveInBottom {
    0% {
        opacity: 0;
        transform: translateY(30px);
    }

    100% {
        opacity: 1;
        transform: translateY(0px);
    }
}

.ellipse {
    display: flex;
    width: 792px;
    height: 299.844px;
    flex-shrink: 0;
    background-image: url("assets/ellipse.png");

    background-size: cover;
    position: relative;
    top: 4%;
    left: 30%;
    opacity: 0;
    /* Start with 0 opacity to make it invisible */
    animation: ellipseMoveUp 1s ease-in forwards, ellipseGlitter 2s infinite;
    z-index: 10;

}

@keyframes ellipseMoveUp {
    0% {
        transform: translateY(500px);
        opacity: 0;
    }

    100% {
        transform: translateY(-10px);
        /* Move the ellipse up */
        opacity: 1;
        /* Make it visible */
    }


}

@keyframes ellipseGlitter {
    0% {
        opacity: 1;
    }

    10% {
        opacity: 0.9;
    }

    20% {
        opacity: 0.8;
    }

    30% {
        opacity: 0.7;
    }

    40% {
        opacity: 0.5;
    }

    50% {
        opacity: 0.35;
    }

    60% {
        opacity: 0.5;
    }

    70% {
        opacity: 0.7;
    }

    80% {
        opacity: 0.8;
    }

    90% {
        opacity: 0.9;
    }

    100% {
        opacity: 1;
    }
}
</style>

