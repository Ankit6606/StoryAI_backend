        <path
          d="M1061.79 50.8208C395.688 -83.657 -122.319 214.401 -298.061 380.24L-447.635 983.478C332.14 1055.11 1885.27 1193.45 1859.61 1173.71C1833.94 1153.97 2042.89 383.164 2150.57 0.229522C2065.19 73.1257 1727.89 185.299 1061.79 50.8208Z"
          fill="url(#paint0_linear_519_62)" />
        <defs>
          <linearGradient id="paint0_linear_519_62" x1="978.447" y1="-20.2514" x2="2019.09" y2="237.778"
